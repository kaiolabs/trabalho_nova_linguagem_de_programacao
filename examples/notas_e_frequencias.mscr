    instrumento piano;
    
    \_ Dó em diferentes oitavas _/
    tocar do1 colcheia;
    tocar do2 colcheia;
    tocar do3 colcheia;
    tocar do4 colcheia;
    tocar do5 colcheia;
    tocar do6 colcheia;
    tocar do7 colcheia;
    tocar do8 colcheia;
    
